<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 첫번째 앱"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/myColor1"
        android:layout_marginBottom="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이 계산 앱"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/myColor4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="handleClick"
        />

    <Button
        android:id="@+id/gender_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="( 남 / 여 ) 선택"

        android:backgroundTint="@color/myColor2"
        app:cornerRadius = "0dp"
        />
<!--  버튼은 background 컬러가 잘 안들어가는데 이럴때는 backgroundTint를 해주면 우선적으로 적용 가능-->

<TextView
    android:id="@+id/gender_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="성별 숨김 영역"
    android:textSize="15sp"
    android:visibility="invisible"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름을 입력하세요"
        android:textSize="25dp"
        android:textColor="@color/myColor3"
        android:textStyle="bold"
        />

<!--   인풋 타입으로 텍스트 타입을 지정-->

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="이름"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 이름은?"
        android:textSize="20dp"
        android:textColor="@color/myColor4"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 숨김 영역"
        android:textSize="20sp"
        android:visibility="invisible"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생일을 입력하세요"
        android:textSize="25dp"
        android:textColor="@color/myColor3"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />



    <Button
        android:id="@+id/birth_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="클릭"

        android:backgroundTint="@color/myColor1"
        app:cornerRadius = "0dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 나이는?"
        android:textSize="20dp"
        android:textColor="@color/myColor4"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/birth_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이 숨김 영역"
        android:textSize="20sp"
        android:visibility="gone"
        />




</LinearLayout>